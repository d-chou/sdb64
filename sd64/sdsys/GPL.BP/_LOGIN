$internal
$no.symbols
$no.xref
$recursive
$flags trusted

subroutine login(username, password)
$include int$keys.h

   openpath @sdsys:@ds:'$LOGINS' to lgn.f then
      read lgn.rec from lgn.f, username then
         if pwcrypt(password) = lgn.rec<LGN$PASSWORD> then
            return value @true
         end
      end
   end

   return value @false
end

* END-CODE
