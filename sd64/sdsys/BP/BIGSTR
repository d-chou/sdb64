program bigstr
* program to test MAX_STRING_SIZE mods
$EXPLIST
* 2147483647 7fff ffff
* 2147486648 8000 0000
* 2415919103 8fff ffff
* 536870911
crt 'create a big string'
bgsz = 536870911
bstr = str('x',bgsz)
crt 'len of big string ': len(bstr)
mystr = '1234567890'

crt 'mystr = ':mystr 

crt 'now append'
bstr := mystr
crt 'len of big string ': len(bstr)

crt 'now concatinate'
biggerstr = bstr:mystr
crt 'len of bigger string ': len(biggerstr)
crt 'complete'
end 
